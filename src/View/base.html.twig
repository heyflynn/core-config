<!doctype html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="en" dir="ltr">
    <head>

        <!-- meta -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <title>{% block title "Sifoan" %}</title>
        <link rel="icon" href="/favicon.ico" type="image/x-icon">
        <meta name="description" content="{% block description "a simple and fast html5 web application using silex, foundation and angular" %}">
        <meta name="author" content="{% block author "Casey Flynn" %}">
        <meta name="copyright" content= "{% block copyright "MIT" %}">
        <meta content="yes" name="apple-mobile-web-app-capable">
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">


        <!-- app meta -->
        {% block metas %}
            <meta property="og:site_name" content="">
            <meta property="og:url" content="">
            <meta property="og:app_id" content="">
            <meta property="og:title" content="">
            <meta property="og:type" content="">
            <meta property="og:image" content="">
            <meta property="og:description" content="">
            <meta property="fb:admins" content="">
            <meta name="twitter:card" content="">
            <meta name="twitter:image" content="">
            <meta name="twitter:site" content="">
            <meta name="twitter:url" content="">
            <meta name="twitter:description" content="">
            <meta name="twitter:title" content="">
        {% endblock metas %}
        <!-- end meta -->

        <!-- stylesheets -->
        {% block stylesheets %}
            <link href="/fonts/fonts.css" type="text/css" rel="stylesheet" media="screen" />
            <link href="/css/master.css" type="text/css" rel="stylesheet" media="screen" />
        {% endblock stylesheets %}
        <!-- end stylesheets -->


        <!-- javascript (polyfills) head -->
        {% block javascript_head %}

            <link src="/bower/respond/cross-domain/respond-proxy.html" id="respond-proxy" rel="respond-proxy" />
            <link src="/bower/respond/cross-domain/respond.proxy.gif"  id="respond-redirect" rel="respond-redirect" />

            {% if app.debug %}
                <script src="/js/dist/polyfills.js" type="text/javascript"></script>
            {% else %}
                <script src="/js/dist/polyfills.min.js" type="text/javascript"></script>
            {% endif %}

        {% endblock javascript_head %}
        <!-- end javascript (polyfills) head -->

    </head>

    <body id="body" {% block app %}ng-app="sifoan"{% endblock app %}>

        <!--[if lt IE 9]>
        <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser
            today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better
            experience this site.</p>
        <![endif]-->
        {% block body "" %}

        <!-- javascript foot -->
        {% block javascript_foot %}

            {% if app.debug %}
                <script src="/js/dist/scripts.js" type="text/javascript"></script>
                <script>document.write('<script src="//' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
            {% else %}
                <script src="/js/dist/scripts.min.js" type="text/javascript"></script>
            {% endif %}

            <!-- inline scripting block -->
            {% block javascript "" %}

        {% endblock javascript_foot %}
        <!-- end javascript foot -->

    </body>
</html>
